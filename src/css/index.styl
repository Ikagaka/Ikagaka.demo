html, body
	width 100%
	height 100%
	margin 0
	padding 0

a
	color #06c

.ConsoleWindow
	position fixed
	top 0
	left 0
	width 30em
	height 20em
	background rgba(255,255,255,0.5)
	overflow auto
	font-size small
	.log
		color #090
	.warn
		color #f66
	.error
		color #f00


