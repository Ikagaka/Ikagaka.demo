.named .scope
	position fixed !important

header
	margin 0.5em
	padding 0.5em
	border-bottom 1px solid #ccc
	h1
		margin 0
		a
			text-decoration none
article
	margin 0.5em
	line-height 140%
	.ikagaka
		.baseware
			text-align center
			margin 1em
			button
				display block
				margin 0.2em auto
	.notice
		font-size smaller
	h2
		margin 0.5em 0
		padding 0.5em 0
		border-bottom 1px solid #ddd
	p
		margin 0.5em
	ul
		margin 0
		padding 0 0 0 1.5em
		li
			margin 0.5em
	dl
		margin 0
		padding 0
		dt
			margin 0
			padding 0
			font-weight bold
		dd
			margin 0
			padding 0 0 0 1.5em
footer
	margin 0.5em
