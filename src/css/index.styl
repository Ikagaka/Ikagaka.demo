html, body
	width 100%
	height 100%
	margin 0
	padding 0

a
	color #06c

.ConsoleWindow
	position fixed
	top 0
	left 0
	width 30em
	height 20em
	margin 0
	padding 1em
	overflow auto
	font-size x-small
	text-shadow:
		0 1px 0 #fff,
		1px 0 0 #fff,
		0 -1px 0 #fff,
		-1px 0 0 #fff,
		1px 1px 0 #fff,
		1px -1px 0 #fff,
		-1px 1px 0 #fff,
		-1px -1px 0 #fff
	.log
		color #090
	.warn
		color #f66
	.error
		color #f00


