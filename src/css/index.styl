header
	margin 0.5em
	padding 0.5em
	border-bottom 1px solid #ccc
	h1
		margin 0
		a
			text-decoration none
article
	margin 0.5em
	line-height 140%
	.ikagaka
		.baseware
			text-align center
		.ghosts
			border-top 1px solid #999
			list-style none
			max-width 50em
			margin 0.5em auto
			padding 0em
			li
				border-bottom 1px solid #999
				margin 0em auto
				padding 0.2em
				.name
					font-weight bold
				button.change, button.call, button.close, .install
					display inline-block
					border none
					color #fff
					font-size medium
					margin 0 0.2em
					padding 0.5em
				button.change
					background #06f
				button.call
					background #0c0
				button.close
					background #f00
				.install
					background #f90
				ul.list
					list-style none
					li
						border-bottom none
						margin 0.2em 0
						&.ok
							color #fff
							cursor pointer
						&.ng
							color #999
							background #ccc
				.change .list li
					background #06f
				.call .list li
					background #0c0
	.notice
		font-size smaller
	h2
		margin 0.5em 0
		padding 0.5em 0
		border-bottom 1px solid #ddd
	p
		margin 0.5em
	ul
		margin 0
		padding 0 0 0 1.5em
		li
			margin 0.5em
	dl
		margin 0
		padding 0
		dt
			margin 0
			padding 0
			font-weight bold
		dd
			margin 0
			padding 0 0 0 1.5em
footer
	margin 0.5em
