		script(src="#{dir.vendor.js}/underscore.js")
		script(src="#{dir.vendor.js}/encoding.min.js")
		script(src="#{dir.vendor.js}/surfaces_txt2yaml.js")
		script(src="#{dir.vendor.js}/shiorijk.js")
		script(src="#{dir.vendor.js}/WMDescript.js")
		script(src="#{dir.vendor.js}/jszip.min.js")
